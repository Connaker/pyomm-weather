pipeline {
    agent any
    tools {nodejs "node_v18"}
    stages {
        stage('Checkout') {
            steps {
                git branch: 'devel', url: 'https://github.com/Connaker/pyowm-weatherapp.git'
            }
        }
        stage('Install Typescript') {
            steps {
                sh 'npm install typescript'
            }  
        }
        stage('Run sonar scanner'){
            environment {
                scannerHome=tool 'sonarscanner';
            }
            steps {
                withSonarQubeEv(credentialsId: 'sonarqube', installationName: 'sonarqube') {
                    sh "${scannerHome}/bine/sonar-scanner"
                }
            }
        }
    }

}